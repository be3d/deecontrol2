<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.Button?>

<?import java.net.URL?>

<AnchorPane fx:id="root" fx:controller="com.ysoft.dctrl.ui.controller.MainPanelController" xmlns:fx="http://javafx.com/fxml">
  <HBox AnchorPane.topAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" styleClass="panel, main-panel">
    <HBox styleClass="main-panel-group">
      <Button fx:id="add" text="?_main_add" styleClass="main-panel-button, add-button" />
    </HBox>
    <HBox styleClass="main-panel-group">
      <Button fx:id="undo" text="?_main_undo" styleClass="main-panel-button, undo-button" disable="true" />
      <Button fx:id="redo" text="?_main_redo" styleClass="main-panel-button, redo-button" disable="true" />
    </HBox>
    <HBox styleClass="main-panel-group" visible="false" managed="false">
      <Button fx:id="group" text="?_main_group" styleClass="main-panel-button, group-button" disable="true" />
      <Button fx:id="ungroup" text="?_main_ungroup" styleClass="main-panel-button, ungourp-button" disable="true" />
    </HBox>
    <HBox styleClass="main-panel-group">
      <Button fx:id="center" text="?_main_center" styleClass="main-panel-button, center-button" disable="true"/>
      <Button fx:id="left" text="?_main_left" styleClass="main-panel-button, left-button" disable="true"/>
      <Button fx:id="right" text="?_main_right" styleClass="main-panel-button, right-button" disable="true"/>
      <Button fx:id="front" text="?_main_front" styleClass="main-panel-button, front-button" disable="true"/>
      <Button fx:id="back" text="?_main_back" styleClass="main-panel-button, back-button" disable="true"/>
    </HBox>
    <HBox styleClass="main-panel-group">
      <Button fx:id="resetView" text="?_main_reset_view" styleClass="main-panel-button, reset-view-button" />
      <Button fx:id="perspectiveOn" text="?_main_perspective_on" styleClass="main-panel-button, perspective-on-button" visible="false" managed="false"/>
      <Button fx:id="perspectiveOff" text="?_main_perspective_off" styleClass="main-panel-button, perspective-off-button"/>
      <Button fx:id="topView" text="?_main_top_view" styleClass="main-panel-button, top-view-button"/>
    </HBox>
  </HBox>

  <stylesheets>
    <URL value="@/css/master.css" />
    <URL value="@/css/main_panel.css" />
  </stylesheets>
</AnchorPane>