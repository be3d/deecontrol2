<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>


<fx:root type="javafx.scene.layout.VBox" xmlns:fx="http://javafx.com/fxml" styleClass="">
    <Label fx:id="label" styleClass="control-label"></Label>
    <HBox spacing="0"  alignment="CENTER_LEFT">
        <children>
            <Region prefWidth="30"></Region>
            <Slider fx:id="slider"
                    styleClass="control-slider"
                     ></Slider>
            <Region prefWidth="8"></Region>
            <TextField fx:id="valueText" text="" styleClass="control-slider-text"></TextField>

        </children>
    </HBox>
</fx:root>