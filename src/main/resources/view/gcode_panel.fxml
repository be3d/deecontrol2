<?xml version="1.0" encoding="UTF-8"?>


<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.Region?>


<?import java.net.URL?>

<?import com.ysoft.dctrl.ui.controller.controlMenu.Header?>
<?import com.ysoft.dctrl.ui.controller.controlMenu.CheckBoxInline?>
<?import javafx.scene.text.TextFlow?>
<?import javafx.scene.text.Text?>

<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.control.RadioButton?>
<AnchorPane fx:id="gcodePanelPane" fx:controller="com.ysoft.dctrl.ui.controller.GCodePanelController" xmlns:fx="http://javafx.com/fxml" styleClass="control-menu" visible="false">

    <VBox AnchorPane.topAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0">
        <Header label="PRINT JOB INFORMATION" icon="@/img/control_menu/job_info_icon.png" />
            <VBox styleClass="control-menu-keyValueText-container">
                <HBox styleClass="control-menu-keyValueText-row" >
                    <Label styleClass="control-menu-keyValueText-key" text="Name:"></Label>
                    <Label fx:id="jobNameLabel" styleClass="control-menu-keyValueText-value" text="Untitled"></Label>
                </HBox>
                <HBox styleClass="control-menu-keyValueText-row" >
                    <Label styleClass="control-menu-keyValueText-key" text="Print time:"></Label>
                    <Label fx:id="printTimeLabel" styleClass="control-menu-keyValueText-value" text="Untitled"></Label>
                </HBox>
                <HBox styleClass="control-menu-keyValueText-row" >
                    <Label styleClass="control-menu-keyValueText-key" text="Filament usage:"></Label>
                    <Label fx:id="filamentUsageLabel" styleClass="control-menu-keyValueText-value" text="Untitled"></Label>
                </HBox>
            </VBox>
        <Header label="OBJECT VISUALISATION" icon="@/img/control_menu/gc_viewer_icon.png"/>
        <fx:define><ToggleGroup fx:id="viewToggleGroup"></ToggleGroup></fx:define>
        <VBox styleClass="control-menu-radioButton-container">
            <RadioButton fx:id="optimizedViewRadio" toggleGroup="$viewToggleGroup" text="Optimized view" userData="optimizedView"
                         styleClass="control-menu-radioButton" selected="true" disable="true"></RadioButton>
            <Label styleClass="control-menu-radioButton-info" wrapText="true" text="Hybrid view which shows how the scene will be printed." ></Label>
        </VBox>
        <VBox styleClass="control-menu-keyValueText-container">
            <RadioButton fx:id="detailedViewRadio" toggleGroup="$viewToggleGroup" text="Detailed view" userData="detailedView"
                         styleClass="control-menu-radioButton" disable="true"></RadioButton>
            <Label styleClass="control-menu-radioButton-info" wrapText="true" text="Comprehensive view which shows full details of the scene."></Label>
        </VBox>
        <VBox fx:id="detailViewControls" visible="false">
            <CheckBoxInline fx:id="displayShell" text="Display shell" ></CheckBoxInline>
            <CheckBoxInline fx:id="displayTravelMoves" text="Display travel moves" ></CheckBoxInline>
            <CheckBoxInline fx:id="displayInfill" text="Display infill"></CheckBoxInline>
            <CheckBoxInline fx:id="displaySupports" text="Display supports"></CheckBoxInline>
            <CheckBoxInline fx:id="displayOuterWalls" text="Display outer walls"></CheckBoxInline>
            <!--<CheckBoxInline fx:id="viewOneLayer" text="View individual layer"></CheckBoxInline>-->
        </VBox>
    </VBox>

    <VBox alignment="CENTER" AnchorPane.bottomAnchor="10" AnchorPane.leftAnchor="10" AnchorPane.rightAnchor="10"  >
        <Button fx:id="backToEditBtn" styleClass="control-button-back" text="BACK TO EDIT" />
        <Region prefHeight="10"></Region>
        <Button fx:id="sendJobBtn" styleClass="control-button" text="SEND TO SAFEQ" />
    </VBox>

    <stylesheets>
        <URL value="@/css/master.css" />
        <URL value="@/css/control_menu.css" />
    </stylesheets>
</AnchorPane>